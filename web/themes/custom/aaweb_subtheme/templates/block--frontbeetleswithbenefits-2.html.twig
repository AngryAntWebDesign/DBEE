<div{{ attributes }} class="banner-block">
<div class="overlay"></div>
  <div class="d-flex align-items-center justify-content-center jumbotron jumbotron-fluid image-block-background" {% if content.field_banner_image['#items'].entity.uri.value %} style="background: url({{ file_url(content.field_banner_image['#items'].entity.uri.value) }}); background-size: cover; background-position: center"{% endif %} >
    <!--<div class="container">-->
    <div class="non-container">
      <div class="row">
        <div class="">
          {{ title_prefix }}
          {% if label %}
            <h2{{ title_attributes.addClass('display-4') }}>{{ label }}</h2>
          {% endif %}
          {{ title_suffix }}
          {% if content.body is not empty %}
            <div class="lead">{{ content.body }}</div>
          {% endif %}
          {% if content.field_button[0]['#url'] %}
            <div><a href="{{ content.field_button[0]['#url'] }}" class="btn btn-primary">{{ content.field_button[0]['#title'] }}</a></div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>