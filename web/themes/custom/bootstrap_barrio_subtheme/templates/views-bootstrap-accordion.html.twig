<div id="{{ id }}" {{ attributes.addClass(classes) }}>
  {% for key, row in rows -%}
      <div class="card">
        <div class="class-header" id="heading{{ key }}">
          <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#{{ id }}-collapse-{{ key }}" aria-expanded="false" aria-controls="collapseOne">
              {{ row.title }}
            </button>
          </h5>
        </div>

        <div id="{{ id }}-collapse-{{ key }}" class="collapse" aria-labelledby="heading{{ key }}" data-parent="#{{ id }}">
          <div class="card-body">
              {{row.content}}
          </div>
        </div>
      </div>
  {%- endfor %}
</div>